@model IEnumerable<ActorLibrary.Models.Actor>

@{
    ViewBag.Title = "Search";
}

<h3>@ViewBag.SearchMessage</h3>

<p>
    @Html.ActionLink("Ny skuespiller", "Create", "Actor", null, null )
</p>
<div class="row air-below">
    <div class="col-md-2 text-left"><h4>@Html.DisplayNameFor(model => model.FullName):</h4></div>
    <div class="col-md-1 text-left"><h4>Kjønn:</h4></div>
    <div class="col-md-2 text-left"><h4>@Html.DisplayNameFor(model => model.Mail):</h4></div>
    <div class="col-md-1 text-left"><h4>@Html.DisplayNameFor(model => model.Phone):</h4></div>

    <div class="col-md-1"><h4>Bilde:</h4></div>
    <div class="col-md-4"><h4>Kommentar:</h4></div>
    <div class="col-md-1"><h4></h4></div>
    </div>

@{ var counter = 0;}

    @foreach (var item in Model)
    {
        <div class="row">
            <div class="col-md-2 text-left">@Html.ActionLink(item.FullName, "Details", new { id = item.ActorId} )</div>
            <div class="col-md-1 text-left">@ViewBag.GenderNames[counter]</div>
            <div class="col-md-2 text-left">@Html.DisplayFor(modelItem => item.Mail)</div>
            <div class="col-md-1 text-left">@Html.DisplayFor(modelItem => item.Phone)</div>


            <div class="col-md-1"><img class="img-responsive img-margin img-circle" src="@item.ImgUrl" alt="@item.FullName" /></div>

            <div class="col-md-4">@Html.DisplayFor(modelItem => item.Comment)</div>

            <div class="col-md-1">
                @Html.ActionLink(" ", "AddAudioFiles", "Home", new { id = item.ActorId }, new { @class = "glyphicon glyphicon-pencil" })
                @Html.ActionLink(" ","Details", new { id = item.ActorId }, new { @class = "glyphicon glyphicon-user" })
                @Html.ActionLink(" ", "Delete", new { id = item.ActorId }, new { @class = "glyphicon glyphicon-remove" })
                
            </div>
        </div>
        counter++;
    }


